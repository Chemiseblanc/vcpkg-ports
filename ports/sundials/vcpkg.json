{
  "name": "sundials",
  "version-semver": "6.2.0",
  "port-version": 3,
  "description": "SUNDIALS (SUite of Nonlinear and DIfferential/ALgebraic equation Solvers)",
  "homepage": "https://computation.llnl.gov/projects/sundials",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "default-features": [
    "arkode",
    "cpodes",
    "cvode",
    "cvodes",
    "ida",
    "idas",
    "kinsol"
  ],
  "features": {
    "arkode": {
      "description": "Enable ARKODE solver"
    },
    "cpodes": {
      "description": "Enable CPODES solver"
    },
    "cuda": {
      "description": "Enable CUDA support",
      "dependencies": [
        "cuda"
      ]
    },
    "cvode": {
      "description": "Enable CVODE solver"
    },
    "cvodes": {
      "description": "Enable CVODES solver"
    },
    "hip": {
      "description": "Enable HIP support",
      "dependencies": [
        "hip"
      ]
    },
    "ida": {
      "description": "Enable IDA solver"
    },
    "idas": {
      "description": "Enable IDAS solver"
    },
    "kinsol": {
      "description": "Enable KINSOL solver"
    },
    "lapack": {
      "description": "Enable LAPACK support",
      "dependencies": [
        "lapack"
      ]
    },
    "mpi": {
      "description": "Enable MPI support",
      "dependencies": [
        "mpi"
      ]
    },
    "openmp": {
      "description": "Enable OpenMP support",
      "dependencies": [
        "openmp"
      ]
    }
  }
}
